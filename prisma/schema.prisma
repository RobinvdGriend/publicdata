// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Tag {
    id        Int        @id @default(autoincrement())
    title     String     @unique
    pinned    Boolean
    events    Event[]
    venues    Venue[]
    tagGroups TagGroup[]
}

model City {
    id        Int        @id @default(autoincrement())
    title     String     @unique
    events    Event[]
    venues    Venue[]
    tagGroups TagGroup[]
}

model TagGroup {
    id     Int    @id @default(autoincrement())
    title  String @unique
    tags   Tag[]
    City   City?  @relation(fields: [cityId], references: [id])
    cityId Int?
}

model Venue {
    id         Int     @id @default(autoincrement())
    importId   String  @unique
    title      String  @unique
    url        String?
    website    String?
    events     Event[]
    tags       Tag[]
    cities     City[]
    lists      List[]
    sourceType String
}

model Event {
    id          Int      @id @default(autoincrement())
    uid         String
    sequence    Int
    summary     String
    description String
    start       DateTime
    end         DateTime
    url         String
    imageUrl    String
    tags        Tag[]
    venueId     Int
    venue       Venue    @relation(fields: [venueId], references: [id])
    sourceType  String
    cities      City[]

    @@unique([uid, sequence], name: "uidSequence")
}

model List {
    id     Int     @id @default(autoincrement())
    title  String
    name   String  @unique
    venues Venue[]
}
