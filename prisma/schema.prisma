// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Tag {
    id        Int        @id @default(autoincrement())
    title     String     @unique
    events    Event[]
    calendars Calendar[]
    tagGroups TagGroup[]
}

model TagGroup {
    id    Int    @id @default(autoincrement())
    title String @unique
    tags  Tag[]
}

model Calendar {
    id      Int     @id @default(autoincrement())
    title   String
    url     String  @unique
    website String
    events  Event[]
    tags    Tag[]
}

model Event {
    id          Int       @id @default(autoincrement())
    summary     String
    description String
    start       DateTime
    end         DateTime
    url         String
    imageUrl    String
    tags        Tag[]
    calendarId  Int?
    calendar    Calendar? @relation(fields: [calendarId], references: [id])
    sourceType  String
}
