// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Tag {
    id        Int        @id @default(autoincrement())
    title     String     @unique
    events    Event[]
    venues    Venue[]
    tagGroups TagGroup[]
}

model TagGroup {
    id    Int    @id @default(autoincrement())
    title String @unique
    tags  Tag[]
}

model Venue {
    id         Int     @id @default(autoincrement())
    title      String  @unique
    url        String?
    website    String?
    events     Event[]
    tags       Tag[]
    lists      List[]
    sourceType String
}

model Event {
    id          Int      @id @default(autoincrement())
    summary     String
    description String
    start       DateTime
    end         DateTime
    url         String
    imageUrl    String
    tags        Tag[]
    venueId     Int
    venue       Venue    @relation(fields: [venueId], references: [id])
    sourceType  String
}

model List {
    id     Int     @id @default(autoincrement())
    title  String
    name   String  @unique
    venues Venue[]
}
